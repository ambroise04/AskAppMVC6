<div class="modal fade" id="response-modal" tabindex="-1" role="dialog" aria-labelledby="centerTitle" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="title">Response</h5>
            </div>
            <div class="modal-body">
                <form id="response-form">
                    @Html.AntiForgeryToken()
                    <div class="form-row">
                        <div class="col-md-12 form-group">
                            <label for="formGroupExampleInput">Your response</label>
                            <textarea class="form-control" placeholder="Type your response here..." name="message"></textarea>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer row">
                <div class="col">
                    <button type="reset" class="btn btn-outline-dark form-control" data-dismiss="modal">Cancel</button>
                </div>
                <div class="col">
                    <button type="submit" class="btn btn-info form-control" onclick="sendResponse()">Save</button>
                </div>
            </div>
        </div>
    </div>
</div>