@inject SignInManager<ApplicationUser> SignInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AskAppMVC6.UI</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css">
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/Site.css" rel="stylesheet" />
    <link href="~/css/toastr.css" rel="stylesheet" />
    <link href="~/css/design.css" rel="stylesheet" />
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-light my-bg-blue-color my-white-color">
        <div class="container">
            <a class="navbar-brand my-white-color" href="#">ASKAPP 2020</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="Index" asp-controller="Home">Home <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <form class="form-inline my-2 my-lg-0 mr-2">
                    <input class="form-control mr-sm-2 search-input" type="search" placeholder="Search" aria-label="Search">
                </form>
                <ul class="navbar-nav">
                    <li class="nav-item dropdown dropdown-menu-left">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="far fa-user"></i>
                        </a>
                        <div class="dropdown-menu px-2" aria-labelledby="navbarDropdown">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <form style="width:inherit" id="logoutForm" asp-action="Logout" asp-controller="Account" asp-route-returnUrl="@Url.Action("Index", "Home")">
                                    <button id="logout" type="submit" class="btn btn-sm btn-outline-blue text-dark hoverable form-control"><i class="fas fa-sign-out-alt mr-1"></i>Logout</button>
                                </form>
                            }
                            else
                            {
                                <a asp-action="Login" asp-controller="Account" asp-route-returnUrl="@Url.Action("Index", "Home")" class="btn btn-sm a-outline-blue mb-1 form-control"><i class="fas fa-sign-in-alt  mr-1"></i>Login</a>
                                <a asp-action="Register" asp-controller="Account" asp-route-returnUrl="@Url.Action("Index", "Home")" class="btn btn-sm a-outline-blue form-control"><i class="far fa-registered mr-1"></i>Register</a>
                            }
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted mt-4" style="background-color: #228f9a">
        <div class="container text-white"   >
            &copy; 2020 | Powered by C'LABAz Corp.
        </div>
    </footer>
    <script src="~/js/jquery-3.4.1.min.js"></script>
    <script src="~/js/bootstrap.min.js"></script>
    <script src="~/js/toastr.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>